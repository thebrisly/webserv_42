server:
	server_name: localhost
	port: 8888
	ip: 127.0.0.1
	max_body_size: 300000

	# Default error pages
	error_page:
		403: web/website0/error_pages/403.html
		404: web/website0/error_pages/404.html
		500: web/website0/error_pages/500.html

	# Root directory for the server
	root: web/website0

	location:
		path: /
		methods: POST, DELETE, GET
		default_file: index.html
		directory_listing: off

