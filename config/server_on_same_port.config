server:
	server_name: website0
	port: 8800
	ip: 127.0.0.1
	max_body_size: 300000
	default_file: /default.html

	# Default error pages
	error_page:
		404: /error_pages/404.html

	# Root directory for the server
	root: web/website0

	location:
		path: /
		methods: POST, GET
		directory_listing: off


