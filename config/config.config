server:
	server_name: website0
	port: 8888
	ip: 127.0.0.1
	max_body_size: 300000

	# Default error pages
	error_page:
		404: /error_pages/404.html
		500: /error_pages/500.html
		505: /error_pages/505.html

	# Root directory for the server
	root: web/website0

	location:
		path: /
		methods: POST, DELETE, GET
		directory_listing: off
		redirect: /index.html

	location:
		path: /home.html
		redirect: /index.html
