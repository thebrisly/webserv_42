server:
	server_name: poire
	port: 8888
	ip: 127.0.0.1
	max_body_size: 300000

	# Default error pages
	error_page:
		400: /error_pages/400.html

	# Root directory for the server
	root: web/website0
	
	location:
		path: /
		methods: POST, DELETE, GET
	
	location:
		path: /home.html
		methods: POST, DELETE, GET
		redirect: /index.html

	location:
		path: /img
		methods: POST, DELETE, GET
		directory_listing: on

	location:
		path: /test
		methods: POST, DELETE, GET
		directory_listing: on



