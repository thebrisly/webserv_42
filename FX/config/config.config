server:
	server_name: domain0
	port: 8888
	ip: 127.0.0.1
	max_body_size: 300000

	# Default error pages
	error_page:
		404: www/error_pages/404.html
		500: www/error_pages/500.html

	# Root directory for the server
	root: web

	location:
		path: /
		methods: [GET, POST]
		default_file: index.html
		directory_listing: off

server:
	server_name: domain1
	port: 8880
	ip: 169.254.19.77
	max_body_size: 3000000

	# Default error pages
	error_page:
		404: /error_pages/404.html
		500: /error_pages/500.html

	# Root directory for the server
	root: /var/www/html

	location:
		path: /
		methods: [GET, POST]
		default_file: index.html
		directory_listing: off

